{
  "productName": "airos",
  "version": "1.0.0",
  "identifier": "com.air.airos",
  "build": {
    "beforeDevCommand": "npm run vite dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build-frontend",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "airos",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost; media-src icons: http://icons.localhost",
      "assetProtocol": {
        "scope": ["/usr/airos/icons/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "app",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
